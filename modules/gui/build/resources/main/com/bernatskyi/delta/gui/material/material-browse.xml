<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.bernatskyi.delta.gui.material.MaterialBrowse"
        focusComponent="materialsTable"
        lookupComponent="materialsTable"
        messagesPack="com.bernatskyi.delta.gui.material">
    <dsContext>
        <collectionDatasource id="materialsDs"
                              class="com.bernatskyi.delta.entity.Material"
                              view="material-edit">
            <query>
                <![CDATA[select e from delta$Material e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="materialsTable"
            spacing="true">
        <filter id="filter"
                datasource="materialsDs">
            <properties include=".*"/>
        </filter>
        <table id="materialsTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="categroy"/>
            </columns>
            <rows datasource="materialsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="materialsTable.create"/>
                <button id="editBtn"
                        action="materialsTable.edit"/>
                <button id="removeBtn"
                        action="materialsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
