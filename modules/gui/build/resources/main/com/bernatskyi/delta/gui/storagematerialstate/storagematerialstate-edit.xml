<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.bernatskyi.delta.gui.storagematerialstate.StorageMaterialStateEdit"
        datasource="storageMaterialStateDs"
        focusComponent="fieldGroup"
        messagesPack="com.bernatskyi.delta.gui.storagematerialstate">
    <dsContext>
        <datasource id="storageMaterialStateDs"
                    class="com.bernatskyi.delta.entity.StorageMaterialState"
                    view="storageMaterialState-view"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="storageMaterialStateDs">
            <column width="250px">
                <field id="volume"/>
                <field id="summaryPrice"/>
                <field id="storage"/>
                <field id="material"/>
                <field id="dateTime"/>
                <field id="averagePrice"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"/>
    </layout>
</window>
