<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.bernatskyi.delta.gui.materialcategory.MaterialCategoryBrowse"
        focusComponent="materialCategoriesTable"
        lookupComponent="materialCategoriesTable"
        messagesPack="com.bernatskyi.delta.gui.materialcategory">
    <dsContext>
        <collectionDatasource id="materialCategoriesDs"
                              class="com.bernatskyi.delta.entity.MaterialCategory"
                              view="_local">
            <query>
                <![CDATA[select e from delta$MaterialCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="materialCategoriesTable"
            spacing="true">
        <filter id="filter"
                datasource="materialCategoriesDs">
            <properties include=".*"/>
        </filter>
        <table id="materialCategoriesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="materialCategoriesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="materialCategoriesTable.create"/>
                <button id="editBtn"
                        action="materialCategoriesTable.edit"/>
                <button id="removeBtn"
                        action="materialCategoriesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
