<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.bernatskyi.delta.gui.subgroup.SubGroupEdit"
        datasource="subGroupDs"
        focusComponent="fieldGroup"
        messagesPack="com.bernatskyi.delta.gui.subgroup">
    <dsContext>
        <datasource id="subGroupDs"
                    class="com.bernatskyi.delta.entity.materials.SubGroup"
                    view="subGroupGroup"/>
        <collectionDatasource id="categoriesDs"
                              class="com.bernatskyi.delta.entity.materials.Category"
                              view="_local">
            <query>
                <![CDATA[select e from delta$Category e where e.subGroup.id = :ds$subGroupDs]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="subGroupDs">
            <column width="250px">
                <field id="name"/>
                <field id="group"/>
            </column>
        </fieldGroup>

        <label id="operationsLabel"
               value="msg://categoriesTable"/>
        <table id="categoriesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="categoriesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"/>
                <button id="editBtn"
                        action="categoriesTable.edit"/>
                <button id="removeBtn"
                        action="categoriesTable.remove"/>
            </buttonsPanel>
        </table>

        <iframe id="windowActions"
                screen="editWindowActions"/>
    </layout>
</window>
